= form_for [:admin, event], class: 'form-vertical', remote: true do |f|
  - if event.errors.any?
    #error_explanation
      %h2= "#{pluralize(event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - event.errors.full_messages.each do |msg|
          %li= msg

  .field.form-group
    = f.label :name
    = f.text_field :name, class: 'form-control', placeholder: 'Bu alan'
  .field.form-group
    = f.label :start_date
    = f.date_select :start_date, class: 'form-control'
  .field.form-group
    = f.label :end_date
    = f.date_select :end_date, class: 'form-control'
  .actions
    = f.submit 'Kaydet', class: 'btn btn-default'
